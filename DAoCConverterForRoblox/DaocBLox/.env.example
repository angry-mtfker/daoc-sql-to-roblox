# RbxSyn CodeSync Environment Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
# SSL certificate paths (required if HTTPS_ENABLED=true)
# Generate self-signed certificates for testing:
# openssl req -x509 -newkey rsa:4096 -keyout server.key -out server.crt -days 365 -nodes
SSL_KEY_PATH=server.key
SSL_CERT_PATH=server.crt

# Sync Settings
SYNC_INTERVAL=30
ENABLE_AUTO_SYNC=true
# Maximum number of scripts to sync in one batch
MAX_SYNC_BATCH=100
# Timeout for sync operations (in seconds)
SYNC_TIMEOUT=60

# Authentication (optional)
# Uncomment and set to enable API key authentication
# API_KEY=your-secret-api-key

# Codespace Detection
# Auto-detect codespace URL (GitHub Codespaces)
AUTO_DETECT_CODESPACE=true
# Fallback URL if auto-detection fails
FALLBACK_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error
LOG_FILE=sync.log

# Plugin Settings (default values)
PLUGIN_AUTO_SYNC=true
PLUGIN_SYNC_INTERVAL=30
PLUGIN_SHOW_NOTIFICATIONS=true

# File Management
# Scripts directory (relative to project root)
SCRIPTS_DIR=scripts
# Trash directory for deleted scripts
TRASH_DIR=.rbxsync-trash
# Keep deleted scripts in trash (in days, 0 = never delete)
TRASH_RETENTION_DAYS=30

# Backup Settings
# Enable automatic backups before sync
ENABLE_BACKUPS=true
# Backup directory
BACKUP_DIR=backups
# Keep last N backups
KEEP_BACKUPS=5

