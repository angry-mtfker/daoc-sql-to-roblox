# RbxSyn CodeSync Environment Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
# SSL certificate paths (required if HTTPS_ENABLED=true)
SSL_KEY_PATH=server.key
SSL_CERT_PATH=server.crt

# Sync Settings
SYNC_INTERVAL=30
ENABLE_AUTO_SYNC=true
MAX_SYNC_BATCH=100
SYNC_TIMEOUT=60

# Authentication (optional)
# API_KEY=your-secret-api-key

# Codespace Detection
AUTO_DETECT_CODESPACE=true
FALLBACK_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=sync.log

# Plugin Settings
PLUGIN_AUTO_SYNC=true
PLUGIN_SYNC_INTERVAL=30
PLUGIN_SHOW_NOTIFICATIONS=true

# File Management
SCRIPTS_DIR=scripts
TRASH_DIR=.rbxsync-trash
TRASH_RETENTION_DAYS=30

# Backup Settings
ENABLE_BACKUPS=true
BACKUP_DIR=backups
KEEP_BACKUPS=5

